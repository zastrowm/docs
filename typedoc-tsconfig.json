{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "declaration": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "noEmit": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    ".build/sdk-typescript/src/**/*.ts"
  ],
  "exclude": [
    ".build/sdk-typescript/src/**/__**__/**",
    ".build/sdk-typescript/src/**/*.test.ts"
  ]
}
