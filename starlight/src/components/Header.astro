---
import config from 'virtual:starlight/user-config';

import LanguageSelect from 'virtual:starlight/components/LanguageSelect';
import Search from 'virtual:starlight/components/Search';
import SiteTitle from 'virtual:starlight/components/SiteTitle';
import SocialIcons from 'virtual:starlight/components/SocialIcons';
import ThemeSelect from 'virtual:starlight/components/ThemeSelect';

const { sidebar } = Astro.locals.starlightRoute;

// Extract top-level groups for header tabs
const topLevelTabs = sidebar
  .filter((entry) => entry.type === 'group')
  .map((entry) => {
    // Find the first link in this group to use as the tab's href
    const findFirstLink = (items: typeof sidebar): string | null => {
      for (const item of items) {
        if (item.type === 'link' && item.href) {
          return item.href;
        }
        if (item.type === 'group' && item.entries) {
          const found = findFirstLink(item.entries);
          if (found) return found;
        }
      }
      return null;
    };

    // Check if current page is within this group
    const isInGroup = (items: typeof sidebar): boolean => {
      for (const item of items) {
        if (item.type === 'link' && item.isCurrent) return true;
        if (item.type === 'group' && isInGroup(item.entries)) return true;
      }
      return false;
    };

    return {
      label: entry.label,
      href: findFirstLink(entry.entries) || '#',
      isCurrent: isInGroup(entry.entries),
    };
  });

const shouldRenderSearch =
  config.pagefind || config.components.Search !== '@astrojs/starlight/components/Search.astro';
---

<div class="header">
  <div class="title-wrapper sl-flex">
    <SiteTitle />
  </div>
  
  {topLevelTabs.length > 0 && (
    <nav class="header-tabs sl-hidden md:sl-flex">
      {topLevelTabs.map((tab) => (
        <a href={tab.href} class:list={['header-tab', { active: tab.isCurrent }]}>
          {tab.label}
        </a>
      ))}
    </nav>
  )}
  
  <div class="right-section sl-flex print:hidden">
    {shouldRenderSearch && <Search />}
    <div class="sl-hidden md:sl-flex right-group">
      <div class="sl-flex social-icons">
        <SocialIcons />
      </div>
      <ThemeSelect />
      <LanguageSelect />
    </div>
  </div>
</div>

<style>
  .header {
    display: flex;
    gap: var(--sl-nav-gap);
    align-items: center;
    height: 100%;
  }

  .title-wrapper {
    flex-shrink: 0;
    overflow: clip;
    padding: 0.25rem;
    margin: -0.25rem;
  }

  .header-tabs {
    display: flex;
    flex: 1;
    gap: 0.25rem;
    align-items: center;
    justify-content: flex-start;
  }

  .header-tab {
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    font-size: var(--sl-text-sm);
    font-weight: 600;
    color: var(--sl-color-gray-2);
    text-decoration: none;
    transition: background-color 0.2s, color 0.2s;
  }

  .header-tab:hover {
    background-color: var(--sl-color-gray-6);
    color: var(--sl-color-white);
  }

  .header-tab.active {
    background-color: var(--sl-color-text-accent);
    color: var(--sl-color-text-invert);
  }

  .right-section {
    flex-shrink: 0;
    gap: var(--sl-nav-gap);
    align-items: center;
    margin-left: auto;
  }

  .right-group,
  .social-icons {
    gap: 1rem;
    align-items: center;
  }

  .social-icons::after {
    content: '';
    height: 2rem;
    border-inline-end: 1px solid var(--sl-color-gray-5);
  }
</style>
