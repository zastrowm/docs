{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": ["ES2020"],
    "declaration": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "moduleResolution": "node",
    "noEmit": true,
    "allowJs": true
  },
  "include": [
    "sdk-typescript/src/**/*.ts"
  ],
  "exclude": [
    "sdk-typescript/src/**/__**__/**",
    "sdk-typescript/src/**/*.test.ts"
  ]
}
